  },
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.8",
    "hono": "^4.2.9",
    "jsonwebtoken": "^9.0.2",
    "node": "^22.0.0",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
