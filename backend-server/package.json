  "version": "1.0.0",
  "description": "tilk-backend-server",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev2": "tsx watch ./src/main.ts",
    "db:generate": "npx drizzle-kit generate:pg",
